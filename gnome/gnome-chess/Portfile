# $Id$

PortSystem          1.0

name                gnome-chess
categories          gnome games
platforms           darwin
license             GPL-2+
maintainers         gmail.com:allan.que openmaintainer
description         Chess game where games can be played between a combination of human and computer players
long_description    GNOME Chess is a 2D/3D chess game, where games can be played between a combination \
                    of human and computer players. GNOME Chess detects known third party chess engines.
homepage            https://wiki.gnome.org/Apps/Chess

version             3.16.2

set branch          [join [lrange [split ${version} .] 0 1] .]
master_sites        gnome:sources/${name}/${branch}

checksums           rmd160  9c789ead530b9855836bab60c77a39e558db9ff1 \
                    sha256  8f73b4c645a86e775d092b5b334c70d0868953c1a26cac9d5a234e5f83db3b48

use_xz              yes

depends_build       port:automake \
                    port:autoconf \
                    port:intltool \
                    port:pkgconfig \
                    port:itstool \
                    port:yelp-tools \
                    port:appstream-glib

depends_lib         port:gnome-common \
                    port:librsvg

depends_run         port:adwaita-icon-theme \
                    port:gnome-icon-theme \
                    port:gnome-icon-theme-symbolic \
                    port:gnuchess

use_autoconf        yes
autoconf.cmd        ./autogen.sh

post-activate {
    catch {system "${prefix}/bin/scrollkeeper-update"}
    catch {system "${prefix}/bin/update-desktop-database ${prefix}/share/applications"}
    catch {system "${prefix}/bin/gtk-update-icon-cache -f -t ${prefix}/share/icons/hicolor"}
    catch {system "${prefix}/bin/glib-compile-schemas ${prefix}/share/glib-2.0/schemas"}
}

livecheck.type      gnome
